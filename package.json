{
  "name": "@fabriciofs/mcp-azure-devops",
  "version": "1.0.0",
  "description": "MCP Server for Azure DevOps with PAT-only authentication - All 82 tools from Microsoft's official MCP with simple PAT auth",
  "type": "module",
  "main": "build/index.js",
  "bin": {
    "mcp-azure-devops": "./build/index.js"
  },
  "files": [
    "build/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "start": "node --env-file=.env build/index.js",
    "start:prod": "node build/index.js",
    "dev": "tsc --watch",
    "clean": "rm -rf build",
    "rebuild": "npm run clean && npm run build",
    "typecheck": "tsc --noEmit",
    "inspector": "npx @modelcontextprotocol/inspector"
  },
  "keywords": [
    "mcp",
    "azure-devops",
    "claude",
    "anthropic",
    "devops",
    "model-context-protocol",
    "pat",
    "pipelines",
    "work-items",
    "git"
  ],
  "author": "fabriciofs",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/fabriciofs/mcp-azure-devops.git"
  },
  "bugs": {
    "url": "https://github.com/fabriciofs/mcp-azure-devops/issues"
  },
  "homepage": "https://github.com/fabriciofs/mcp-azure-devops#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "azure-devops-node-api": "^14.1.0",
    "dotenv": "^16.3.1",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.2"
  }
}
